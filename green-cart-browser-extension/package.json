{
  "name": "green-cart-browser-extension",
  "displayName": "Green cart browser extension",
  "version": "0.0.1",
  "description": "A simple chrome extension for managing and offsetting your purchases when shopping on the web.",
  "author": "Henry",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.0.4",
    "plasmo": "0.64.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/chrome": "0.0.210",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "prettier": "2.8.3",
    "typescript": "4.9.4"
  },
  "manifest": {
    "web_accessible_resources": [
      {
        "resources": [
          "~raw.js",
          "assets/images/*.svg",
          "assets/data.json",
          "assets/images/icon.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
